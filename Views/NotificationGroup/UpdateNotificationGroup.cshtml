@model NotificationGroupVM.UpdateNotificationGroupVM
<section class="card-header">
    <h3>Update Notification Group: <span style="color: greenyellow">@Model.Name</span></h3>
    <br />
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <img src="@Url.Content(ViewBag.BannerImageUrl)" alt="Banner Image" class="img-fluid" />
        </div>
    </div>
    <br />
    <div class="card-header">
        <a type="button" asp-controller="NotificationGroup" asp-action="GetNotificationGroups">
            <div class="btn  btn-inverse-info">Return to the Notification Groups </div>
        </a>
    </div>
    <br />
</section>
<form method="post">
    <input type="text" class="form-control" asp-for="NotificationGroupId" hidden readonly />
    <section>
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table width="100%">
                            <tbody>
                                <tr>
                                    <th style="text-align:left">Notification Group Name<span style="color:red"><sup class="star">*</sup></span></th>
                                </tr>
                                <tr>
                                    <td align="left" valign="middle">
                                        <input type="text" class="form-control" asp-for="Name" />
                                        <span class="badge badge-danger badge-pill" asp-validation-for="Name"></span>
                                    </td>
                                </tr>
                                <tr><td style="padding-top:2em"></td></tr>
                                <tr>
                                    <th style="text-align:left">Description<span style="color:red"><sup class="star">*</sup></span></th>
                                </tr>
                                <tr>
                                    <td align="left" valign="middle">
                                        <textarea class="form-control" asp-for="Description" id="simpleMde"></textarea>
                                        <span class="badge badge-danger badge-pill" asp-validation-for="Description"></span>
                                        <h5 class="text-info">NB: The textbox automatically expands as text is added</h5>
                                    </td>
                                </tr>
                                <tr><td style="padding-top:2em"></td></tr>
                                <tr>
                                    <td align="left" valign="middle">
                                        <label asp-for="IsActive" class="form-check-label text-muted">
                                            Is Active?
                                            <input asp-for="IsActive" class=" form-check-input" id="isActiveInput">
                                        </label>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer right">
                    <button type="submit" class="btn btn-inverse-warning btn-icon-text">
                        <i class="ti-save btn-icon-prepend"></i>
                        Update Notification Group: @Model.Name
                    </button>
                    <button type="submit" class="btn btn-inverse-danger btn-icon-text" asp-controller="NotificationGroup" asp-action="DeleteSoft" asp-route-id="@Model.NotificationGroupId"
                            onclick="return confirm('Are you sure?')">
                        <i class="ti-trash btn-icon-prepend"></i>
                        Delete Notification Group: @Model.Name
                    </button>
                </div>
            </div>
        </div>
    </section>
</form>