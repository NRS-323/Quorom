@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<section class="card-header">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <img src="@Url.Content(ViewBag.BannerImageUrl)" alt="Banner Image" class="img-fluid" />
        </div>
    </div>
    <br />
    <h3>User Records</h3>
    <br />
    <div class="card-footer">
        <a type="button" class="btn btn-info" asp-action="Upsert">
            <i class="ti-plus btn-icon-prepend"></i>
            Add a new Role
        </a>
    </div>
    <br />
</section>
<section class="content">
    <div class="card">
        <div class="card-body">
            @if (Model.Count() > 0)
            {
                <div class="row">
                    <div class="col-6">
                        <div class="table-responsive">
                            <table id="order-listing" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th style="text-align:center">ID</th>
                                        <th style="text-align:center">NAME</th>
                                        <th style="text-align:center">ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td align="left" valign="middle">@item.Id</td>
                                            <td align="left" valign="middle">@item.Name</td>
                                            <td align="right" valign="middle">
                                                <form method="post">
                                                    <a type="button" class="btn btn-warning btn-icon-text"
                                                       asp-action="Upsert" asp-route-roleId="@item.Id">
                                                        <i class="ti-pencil"></i>
                                                        Update @item.Name
                                                    </a>
                                                    <button type="submit" class="btn btn-danger btn-icon-text"
                                                            onclick="return confirm('Are you sure you want to delete this?')"
                                                            asp-action="Delete" asp-route-roleId="@item.Id">
                                                        <i class="ti-save btn-icon-prepend"></i>
                                                        Delete @item.Name
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p>No Users Found</p>
            }

        </div>
    </div>
</section>
