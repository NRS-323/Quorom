@model InitiativeVM.AddInitiativeVM
<section class="card-header">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <img src="@Url.Content(ViewBag.BannerImageUrl)" alt="Banner Image" class="img-fluid" />
        </div>
    </div>
    <br />
    
</section>
<style>
    .form-label {
        color: cornflowerblue;
        font-size: 1.1rem;
    }

    .form-control-lg {
        border-radius: 0.5rem;
        padding: 1rem 1.5rem;
    }

    .invalid-feedback {
        font-weight: 500;
    }

    .card {
        border: none;
        border-radius: 1rem;
    }
</style>

<div class="card shadow-lg">
    <div class="card-header bg-primary text-white py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="ti-plus me-2"></i>Create New Initiative
            </h3>
            <a asp-controller="Initiative" asp-action="GetInitiatives" class="btn btn-light">
                <i class="ti-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="card-body">
        <form method="post" class="needs-validation" novalidate>
            <div class="row g-4">
                <div class="col-md-6">
                    <!-- Title -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="ti-pencil-alt me-2"></i>Initiative Title
                            <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   asp-for="Title" 
                                   placeholder="Enter initiative title"
                                   required>
                            <div class="invalid-feedback">
                                Please provide a title
                            </div>
                        </div>
                    </div>

                    <!-- Initiative Type -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="ti-tag me-2"></i>Initiative Type
                            <span class="text-danger">*</span>
                        </label>
                        <select class="form-select form-select-lg"
                                asp-for="InitiativeTypeId" 
                                asp-items="Model.InitiativeTypes"
                                required>
                            <option value="">Select Initiative Type</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select an initiative type
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <!-- Owner -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="ti-user me-2"></i>Owner
                            <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   asp-for="Owner" 
                                   placeholder="Enter owner name"
                                   required>
                            <div class="invalid-feedback">
                                Please provide an owner
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="ti-align-left me-2"></i>Description
                            <span class="text-danger">*</span>
                        </label>
                        <textarea class="form-control form-control-lg" 
                                  asp-for="Description" 
                                  rows="3"
                                  placeholder="Brief description of the initiative"
                                  required></textarea>
                        <div class="invalid-feedback">
                            Please provide a description
                        </div>
                    </div>
                </div>
            </div>

            <!-- Objective -->
            <div class="mb-4">
                <label class="form-label fw-bold">
                    <i class="ti-target me-2"></i>Objective
                </label>
                <div class="border rounded-3 p-3 bg-light">
                    <textarea class="form-control border-0 bg-transparent" 
                              asp-for="Objective" 
                              rows="5"
                              placeholder="Detailed objectives..."></textarea>
                    <small class="text-muted">
                        <i class="ti-info-alt me-1"></i>
                        The textarea will automatically expand as you type
                    </small>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-end border-top pt-4">
                <button type="submit" class="btn btn-primary btn-lg px-5">
                    <i class="ti-save me-2"></i>Create Initiative
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        // Form validation
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}