@model Quorom.ViewModels.TwoFactorAuthenticationVM

<div class="card d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-transparent text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/assets/images/logo.png" alt="logo">
                </div>
                <form method="post">
                    <h3 class="text-center"><span style="color:greenyellow">Umbunite</span>!</h3>
                    <h6 class="font-weight-light text-center">Our data is <span style="color:red">sensitive</span>. Please enter the code in your authenticator application</h6>
                    <br />
                    <div class="text-center">
                        <h6 class="badge badge-warning badge-pill">@Model.Token</h6>
                        <br/>
                        <p>
                            Alternatively, Scan the QR CODE below.
                        </p>
                        <br />
                        <div id="qrCode" class="text-center">

                        </div>

                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-lg" id="code" asp-for="Code" placeholder="Code">
                        <span class="badge badge-danger badge-pill" asp-validation-for="Code"></span>
                    </div>
                    <div class="mt-3 d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg font-weight-medium auth-form-btn">SUBMIT</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        <script src="~/js/qrcode.js"></script>
        <script type="text/javascript">
            new QRCode(document.getElementById("qrCode"), "@Model.QRCodeURL");
        </script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}