@model Quorom.ViewModels.ResetPasswordVM

<div class="card d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-transparent text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/assets/images/logo.png" alt="logo">
                </div>
                <form method="post">
                    <input asp-for="Code" hidden/>
                    <h4><span style="color:greenyellow">User</span>!</h4>
                    <h6 class="font-weight-light">Reset your Password</h6>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="email" class="form-control form-control-lg" id="email" asp-for="Email" placeholder="Email">
                        <span class="badge badge-danger badge-pill" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control form-control-lg" id="password" asp-for="Password" placeholder="Password">
                        <span class="badge badge-danger badge-pill" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control form-control-lg" id="confirmPassword" asp-for="ConfirmPassword" placeholder="Confirm Password">
                        <span class="badge badge-danger badge-pill" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="mt-3 d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg font-weight-medium auth-form-btn">RESET</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}