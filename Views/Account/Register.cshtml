@model Quorom.ViewModels.RegisterVM

<div class="card d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-transparent text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/assets/images/quorom-logo.svg" alt="logo">
                </div>
                <form method="post" asp-controller="Account" asp-action="Register" asp-route-returnURL="@ViewData["ReturnUrl"]">
                    <h4>Not yet an UMBUNITE?</h4>
                    <h6 class="font-weight-light">Become an Umbunite here! It takes only few steps</h6>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-lg" id="firstName" asp-for="FirstName" placeholder="First Name">
                        <span class="badge badge-danger badge-pill" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-lg" id="lastName" asp-for="LastName" placeholder="Last Name">
                        <span class="badge badge-danger badge-pill" asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-lg" id="position" asp-for="Position" placeholder="Position">
                        <span class="badge badge-danger badge-pill" asp-validation-for="Position"></span>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control form-control-lg" id="email" asp-for="Email" placeholder="Email">
                        <span class="badge badge-danger badge-pill" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-lg" id="username" asp-for="Username" placeholder="Username">
                        <span class="badge badge-danger badge-pill" asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control form-control-lg" id="password" asp-for="Password" placeholder="Password">
                        <span class="badge badge-danger badge-pill" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control form-control-lg" id="confirmPassword" asp-for="ConfirmPassword" placeholder="Confirm Password">
                        <span class="badge badge-danger badge-pill" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="form-group">
                        <select class="form-select" id="roleSelected" asp-for="RoleSelected" asp-items="@Model.RoleList" placeholder="Role Selected">
                        <option disabled selected>--SELECT ROLE--</option>
                        </select>
                        <span class="badge badge-danger badge-pill" asp-validation-for="RoleSelected"></span>
                    </div>
                    <div class="mt-3 d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg font-weight-medium auth-form-btn">REGISTER</button>
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        Already have an account? <a asp-controller="Account" asp-action="Login" class="text-primary">Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}