@model Quorom.ViewModels.VerifyAuthenticatorVM

<div class="card d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-transparent text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/assets/images/logo.png" alt="logo">
                </div>
                <form method="post" asp-controller="Account" asp-action="VerifyAuthenticatorCode" asp-route-returnURL="@ViewData["ReturnUrl"]">
                    <h3 class="text-center"><span style="color:greenyellow">Umbunite</span>!</h3>
                    <h6 class="font-weight-light text-center">Please verify your <span style="color:red">Authenticator Code</span>.</h6>
                    <br />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Code"></label>
                        <input type="text" class="form-control form-control-lg" id="code" asp-for="Code" placeholder="Code">
                        <span class="badge badge-danger badge-pill" asp-validation-for="Code"></span>
                    </div>
                    <div class="mt-3 d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg font-weight-medium auth-form-btn">SUBMIT</button>
                    </div>
                    <input asp-for="RememberMe" type="hidden" />
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}