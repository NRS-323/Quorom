@model Quorom.ViewModels.ForgotPasswordVM

<div class="card d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-transparent text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/assets/images/logo.png" alt="logo">
                </div>
                <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                    <h4><span style="color:greenyellow">Umbunite</span>?! You actually forgot your Password?</h4>
                    <br />
                    <h6 class="font-weight-light">Enter your Email Address below</h6>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="email" class="form-control form-control-lg" id="email" asp-for="Email" placeholder="Email">
                        <span class="badge badge-danger badge-pill" asp-validation-for="Email"></span>
                    </div>
                    <div class="mt-3 d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg font-weight-medium auth-form-btn">Submit</button>
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        <span style="color:greenyellow">WAIT</span>! My bad, I remember my Password? <a asp-controller="Account" asp-action="Login" class="text-primary">Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}