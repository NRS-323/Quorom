@model ChallengeTypeVM.AddChallengeTypeVM
<section class="card-header">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <img src="@Url.Content(ViewBag.BannerImageUrl)" alt="Banner Image" class="img-fluid" />
        </div>
    </div>
    <br />
    <h3>Add a Challenge Type Record</h3>
    <br />
    <div class="card-footer">
        <div class="card-footer">
            <a type="button" class="btn btn-inverse-info btn-icon-text" asp-controller="ChallengeType" asp-action="GetChallengeTypes">
                <i class="ti-back-left btn-icon-prepend"></i>
                View All Challenge Types
            </a>
        </div>
    </div>
    <br />
</section>
<form method="post">
    <section class="card-body">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Challenge Type Information</h4>
                    <p class="card-description">
                        Details for the this record's Challenge Type entry
                    </p>

                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label">Challenge Type Name<span style="color:red"><sup class="star">*</sup></span></label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="name" asp-for="Title" />
                            <span class="badge badge-danger badge-pill" asp-validation-for="Title"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-sm-3 col-form-label">Description<span style="color:red"><sup class="star">*</sup></span></label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="description" asp-for="Description" />
                            <span class="badge badge-danger badge-pill" asp-validation-for="Description"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer right">
                    <button type="submit" class="btn btn-success btn-icon-text">
                        <i class="ti-save btn-icon-prepend"></i>
                        Save Challenge
                    </button>
                </div>
            </div>
        </div>
    </section>
</form>